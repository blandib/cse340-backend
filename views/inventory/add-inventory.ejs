

<main class="management-container">
  <h1>Add New Inventory Item</h1>

  <% if (message && message.length) { %>
    <div class="flash notice"><%= message %></div>
  <% } %>

  <% if (errors && errors.array && errors.array().length) { %>
    <ul class="errors">
      <% errors.array().forEach(e => { %>
        <li><%= e.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add" method="post" novalidate>
  <label for="inv_make">Make</label>
  <input id="inv_make" name="inv_make" type="text" required minlength="2" value="<%= inv_make || '' %>">

  <label for="inv_model">Model</label>
  <input id="inv_model" name="inv_model" type="text" required minlength="2" value="<%= inv_model || '' %>">

  <label for="inv_year">Year</label>
  <input id="inv_year" name="inv_year" type="number" min="1900" max="2099" required value="<%= inv_year || '' %>">

  <label for="inv_price">Price</label>
  <input id="inv_price" name="inv_price" type="number" step="0.01" min="0" required value="<%= inv_price || '' %>">

  <label for="inv_miles">Miles</label>
  <input id="inv_miles" name="inv_miles" type="number" min="0" required value="<%= inv_miles || '' %>">

  <label for="inv_color">Color</label>
  <input id="inv_color" name="inv_color" type="text" required minlength="3" value="<%= inv_color || '' %>">

  <label for="inv_image">Image path</label>
  <input id="inv_image" name="inv_image" type="text" required
         placeholder="/images/vehicles/no-image.png"
         value="<%= inv_image || '/images/vehicles/no-image.png' %>">

  <label for="inv_thumbnail">Thumbnail path</label>
  <input id="inv_thumbnail" name="inv_thumbnail" type="text" required
         placeholder="/images/vehicles/no-image-tn.png"
         value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">

  <label for="inv_description">Description</label>
<textarea id="inv_description" name="inv_description" required minlength="5" maxlength="500" rows="4">
  <%= inv_description || '' %>
</textarea>


  <label for="classificationList">Classification</label>
  <%- classificationList %>

  <button type="submit">Add item</button>
</form>

</main>

