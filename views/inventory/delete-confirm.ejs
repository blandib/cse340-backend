<h1><%= title %></h1>

<%- messages() %>

<% if (message && message.length > 0) { %>
  <% message.forEach(msg => { %>
    <p class="notice"><%= msg %></p>
  <% }) %>
<% } %>



<form action="/inv/delete" method="post" class="inventory-form">
  <fieldset>
    <p>Confirm Deletion - The delete is permanent.</p>
    <legend>Vehicle Information</legend>

    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" min="0" step="0.01" readonly>

    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" min="1900" max="<%= new Date().getFullYear() + 1 %>" readonly>

    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles %>" min="0" readonly>

    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <input type="submit" name="submit" value="Delete" class="primary-button">
  </fieldset>
</form>
