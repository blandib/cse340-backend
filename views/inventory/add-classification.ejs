
<main class="management-container">
  <h1><%= title %></h1>

  <p class="instructions">Enter a new vehicle classification name below.</p>

  <% if (message && message.length) { %>
    <div class="flash notice"><%= message %></div>
  <% } %>

  <% if (errors && errors.array && errors.array().length) { %>
    <ul class="errors">
      <% errors.array().forEach(e => { %>
        <li><%= e.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-classification" method="post" novalidate>
    <label for="classification_name">Classification Name</label>
    <input
      id="classification_name"
      name="classification_name"
      type="text"
      required
      minlength="2"
      maxlength="30"
      pattern="^[A-Za-z0-9]+$"
      title="Only letters and numbers allowed, no spaces or special characters"
      value="<%= classification_name || '' %>"
    />

    <button type="submit">Add Classification</button>
  </form>
</main>
