<main>
  <% if (messages && messages.length > 0) { %>
    <div class="flash-messages">
      <% messages.forEach(function(message){ %>
        <p><%= message %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="error-messages">
      <% errors.forEach(function(error){ %>
        <p><%= error.msg %></p>
      <% }) %>
    </div>
  <% } %>

  <h1>Welcome <%= account_firstname %></h1>
  
  <p>You're logged in!</p>
  
  <!-- Use account_id directly -->
  <% if (account_id) { %>
    <p><a href="/account/update/<%= account_id %>" 
          title="Click to edit account information">Edit Account Information</a></p>
  <% } else { %>
    <p>Debug: No account_id found!</p>
  <% } %>
  
  <!-- Use account_type directly -->
  <% if (account_type === "Employee" || account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/" title="Click to manage inventory">Manage Inventory</a></p>
    
    <% if (account_type === "Admin") { %>
      <h3>User Management</h3>
      <p><a href="/account/manage-users" title="Manage User Accounts">Manage User Accounts</a></p>
    <% } %>
  <% } %>
</main>

